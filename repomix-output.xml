                maxlength="1" v-model="otpDigits[index]" class="otp-box" :disabled="timeLeft === 0 || isLoading"
                @input="handleOtpInput(index, $event)" @keydown="handleOtpKeydown(index, $event)" />
            </div>

            <transition name="shake">
